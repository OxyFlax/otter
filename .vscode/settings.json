{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/dist/": true,
    "**/build/": true,
    "**/node_modules": true,
    "**/.cache": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "npm.packageManager": "yarn",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "angular.disableAutomaticNgcc": true,
  "jest.jestCommandLine": "yarn jest",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-file"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.d.ts, ${capture}.d.ts.map",
    "tsconfig.json": "tsconfig.*.json",
    "tsconfig.base.json": "tsconfig.*.json",
    "package.json": "ng-package.json, project.json, yarn.lock",
    "nx.json": "workspace.json, .nxignore",
    ".yarnrc.yml": ".npmrc, .npmrc.*",
    ".eslintrc.*": ".eslintignore, .eslintrc-*"
  },
  "stylelint.validate": [
    "css",
    "scss",
    "source.css.styled",
    "source.markdown.math",
    "styled-css"
  ],
  "eslint.nodePath": ".yarn/sdks",
  "eslint.validate": [
    "javascript",
    "typescript",
    "json"
  ],
  "eslint.probe": [
    "javascript",
    "typescript",
    "typescriptreact",
    "html",
    "markdown",
    "json"
  ],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "nxConsole.generatorAllowlist": [
    "@o3r/core:*"
  ],
  "files.readonlyFromPermissions": true,
  "files.readonlyInclude": {
    "**/.cache/**": true,
    "**/.pnp.*": true,
    "**/.yarn/**": true,
    "**/node_modules/**": true,
    "tools/github-actions/*/packaged-action/**": true
  },
  "otter.extract.styling.prefix": "o3r",
  "otter.generate.store.testFramework": "jest",
  "otter.packageManager": "yarn"
}
