{
  "extends": "../../../tsconfig.build",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "outDir": "dist/",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/templates/**",
    "src/**/*.spec.ts"
  ]
}
